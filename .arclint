{
    "linters": {
        "clang-format": {
            "type": "clang-format",
            "version": "=9.0.0-d3a647c305759f37f30257352e621579f53d0073",
            "include": "(\\.(c|cpp|C|cc|c\\+\\+|cxx|h|hpp)$)"
        },
        "yapf": {
            "type": "yapf",
            "version": "=0.27.0",
            "include": "(\\.py$)"
        },
        "text-rst": {
            "type": "text",
            "include": "(\\.(rst)$)",
            "severity": {
                "1": "autofix",
                "2": "warning",
                "3": "disabled",
                "4": "autofix",
                "5": "disabled",
                "6": "warning",
                "7": "warning",
                "8": "autofix"
            }
        },
        "popart-test-linter": {
            "type": "popart-test-linter",
            "include": "(\\.py$)",
            "exclude": "(docs/user_guide/files/tests/test_examples.py)"
        },
        "gc-copyright": {
            "type": "gc-copyright",
            "exclude": [
                "(CMakeLists.txt$)"
            ]
        }
    }
}
