{
    "linters": { 
        "text-rst": {
            "type": "text",
            "include": "(\\.(rst)$)",
            "severity": {
                "1": "autofix",
                "2": "warning",
                "3": "disabled",
                "4": "autofix",
                "5": "disabled",
                "6": "warning",
                "7": "warning",
                "8": "autofix"
            }
        },
        "popart-test-linter": {
            "type": "popart-test-linter",
            "include": "(\\.py$)",
            "exclude": ["(docs/user_guide/files/tests/test_examples.py)", "(tests/linters/.*)"]
        },
        "autopatch": {
            "type": "autopatch",
            "exclude": "(scripts/pybind11_mkdoc)"
        }
    }
}
